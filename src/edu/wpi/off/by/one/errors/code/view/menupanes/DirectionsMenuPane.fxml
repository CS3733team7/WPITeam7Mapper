<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root minWidth="0.0" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox minWidth="0.0" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="directionsLabel" contentDisplay="CENTER" minWidth="0.0" text="Directions" />
                <BorderPane minWidth="0.0">
                    <left>
                        <Label minWidth="0.0" text="A" BorderPane.alignment="CENTER" />
                    </left>
                    <center>
                        <TextField minWidth="0.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
                <BorderPane minWidth="0.0">
                    <left>
                        <Label minWidth="0.0" text="B" BorderPane.alignment="CENTER" />
                    </left>
                    <center>
                        <TextField minWidth="0.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
                <TitledPane animated="false" minWidth="0.0" text="Options">
                    <content>
                        <VBox minHeight="0.0" minWidth="0.0">
                           <children>
                           	   <CheckBox fx:id="accessibleCheckbox" onAction="#selectAccessible" text="Prioritize Accessibility" />
                               <CheckBox text="Indoors" />
                               <CheckBox text="Stairs" />
                               <CheckBox text="Wind Tunnel" />
                           </children>
                        </VBox>
                    </content>
                </TitledPane>
                <StackPane alignment="CENTER_RIGHT">
                   <children>
                       <Button fx:id="routeButton" contentDisplay="CENTER" minWidth="0.0" mnemonicParsing="false" text="Route" />
                   </children>
                </StackPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="0" right="0" top="0" />
            </padding>
        </VBox>
    </top>
    <center>
        <ListView fx:id="directionsListView" minWidth="0.0" BorderPane.alignment="CENTER" />
    </center>

    <padding>
        <Insets bottom="0" left="10.0" right="10.0" top="0" />
    </padding>
</fx:root>
