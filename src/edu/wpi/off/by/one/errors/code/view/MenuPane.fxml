<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import edu.wpi.off.by.one.errors.code.controller.menupanes.*?>

<fx:root maxWidth="275.0" type="HBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane fx:id="menuBar" maxWidth="-Infinity">
            <top>
                <ToggleButton fx:id="hamburgerToggleButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" selected="true" text="ToggleButton" BorderPane.alignment="CENTER" />
            </top>
            <center>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <RadioButton fx:id="searchMenuRadioButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#extend" prefHeight="40.0" prefWidth="40.0" selected="true" styleClass="toggle-button" text="Search" toggleGroup="$menuButtonToggleGroup">

                        </RadioButton>
                        <RadioButton fx:id="directionsMenuRadioButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#extend" prefHeight="40.0" prefWidth="40.0" styleClass="toggle-button" text="Directions" toggleGroup="$menuButtonToggleGroup">

                        </RadioButton>
                        <RadioButton fx:id="favoritesMenuRadioButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#extend" prefHeight="40.0" prefWidth="40.0" styleClass="toggle-button" text="Favorites" toggleGroup="$menuButtonToggleGroup">

                        </RadioButton>
                    </children>
                </VBox>
            </center>
            <bottom>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <RadioButton fx:id="devToolMenuRadioButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#extend" prefHeight="40.0" prefWidth="40.0" styleClass="toggle-button" text="Dev Tools">
                            <toggleGroup>
                                <ToggleGroup fx:id="menuButtonToggleGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="settingsMenuRadioButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#extend" prefHeight="40.0" prefWidth="40.0" styleClass="toggle-button" text="Settings" toggleGroup="$menuButtonToggleGroup">

                        </RadioButton>
                        <RadioButton fx:id="helpMenuRadioButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#extend" prefHeight="40.0" prefWidth="40.0" styleClass="toggle-button" text="Help" toggleGroup="$menuButtonToggleGroup">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/Question.png" />
                           </image>
                        </ImageView>
                     </graphic></RadioButton>
                    </children>
                </VBox>
            </bottom>
        </BorderPane>
        <AnchorPane fx:id="detailsMenuContainerAnchorPane" maxWidth="235" minWidth="0">
            <children>
                <SearchMenuPane fx:id="searchMenuPane" visible="${searchMenuRadioButton.selected}" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                <DirectionsMenuPane fx:id="directionsMenuPane" visible="${directionsMenuRadioButton.selected}" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                <FavoritesMenuPane fx:id="favoritesMenuPane" visible="${favoritesMenuRadioButton.selected}" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                <DevToolsMenuPane fx:id="devToolsMenuPane" visible="${devToolMenuRadioButton.selected}" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                <SettingsMenuPane fx:id="settingsMenuPane" visible="${settingsMenuRadioButton.selected}" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                <HelpMenuPane fx:id="helpMenuPane" visible="${helpMenuRadioButton.selected}" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
            </children>
        </AnchorPane>
    </children>
</fx:root>
